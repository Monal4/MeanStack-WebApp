<% include partials/header %>

<!-- 
  Password reset functionality with New Password and Confirm Password.
  After clicking Log In new password will be saved.
-->
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="text-capitalize">Welcome to Surveyfy</h1>
            <h3>View Our Surveys</h3>
        </div>
    </header>
    
    <!--Checks if admin is logged in with credentials before he can access and view the surveys-->
    <% if(currentUser) {%>
    
        <a class="float-right btn btn-primary" href="/surveys">View All Surveys</a>
    
    <% } %>
    
    
    
    <br></br>
    <br></br>
    
    <!-- 
      Checks if Surveys are created and saved in the database
      then to display all the featured survey list.
    -->
    <h1 class="text-center">FEATURED SURVEYS</h1>
    <br></br>
    <div class="container">
        <% if(surveys.length > 0){ %>
           <% surveys.forEach(function(survey) { %>
                <div class="card card-body bg-light">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3><%= survey.name %></h3>
                            <h4><%= survey.description %></h4>
                            
                            <p>
                                <a href="/surveys/response/<%= survey._id %>" class="btn btn-outline-secondary">Take the Survey</a>
                            </p>
                        </div>
                    </div>
                </div>
            <%})%>
        <!--If featured surveys are not found in the database. Then the following outcome is displayed.-->
         <% } else{ %>  
             <div class="container">
                 <h3 class="text-center">No Featured Surveys Now...</h1>
             </div>
        <% } %>
        
    </div>

</div>

<% include partials/footer %>