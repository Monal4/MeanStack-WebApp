<!--
	Displays a alert div for showing messages for admin and respondents with if condition to check the length of error and success.
-->



<div >
  <% if (error && error.length >= 1) {%>
    <div class="alert alert-danger" role="alert">
    <%= error %>
  </div>
  <% } %>
  
  <% if (success && success.length >= 1) {%>
    <div class="alert alert-success " role="alert">
      <%= success %>
    </div>
   <% } %> 
</div>


